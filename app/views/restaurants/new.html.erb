<div class="container">
  <h2>New restaurant</h2>
  <br>
  <%= simple_form_for (@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit "add a restaurant", class: "btn btn-primary" %>
  <% end %>
  <br>
  <p><%= link_to "Back to restaurants list", restaurants_path, :class => "btn btn-secondary" %></p>
</div>
